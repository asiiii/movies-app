<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/main_page_header_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:fontFamily="monospace"
        android:gravity="center"
        android:text="@string/app_name"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="36sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_page_header_text"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/button_register"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:fontFamily="serif-monospace"
            android:onClick="launchRegisterActivity"
            android:text="@string/register_movie_label"
            android:textSize="24sp"
            android:textStyle="bold"
            app:backgroundTint="@color/button_color"
            app:icon="@drawable/ic_register"
            app:iconPadding="0dp"
            app:strokeColor="#FFFFFF" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_display"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="325dp"
                android:layout_height="60dp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:fontFamily="serif-monospace"
                android:onClick="launchDisplayMoviesActivity"
                android:text="@string/display_movies_label"
                android:textSize="24sp"
                android:textStyle="bold"
                app:backgroundTint="@color/button_color"
                app:icon="@drawable/ic_baseline_list_24"
                app:iconPadding="0dp"
                app:strokeColor="#FFFFFF" />

            <Button
                android:id="@+id/button_favourites"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="325dp"
                android:layout_height="60dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:fontFamily="serif-monospace"
                android:onClick="launchFavouritesActivity"
                android:text="@string/favourites_label"
                android:textSize="24sp"
                android:textStyle="bold"
                app:backgroundTint="@color/button_color"
                app:icon="@drawable/ic_baseline_favorite_24"
                app:iconPadding="0dp" />
        </LinearLayout>

        <Button
            android:id="@+id/button_edit"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="590dp"
            android:layout_height="60dp"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="50dp"
            android:fontFamily="serif-monospace"
            android:onClick="launchEditActivity"
            android:text="@string/edit_movies_label"
            android:textSize="23sp"
            android:textStyle="bold"
            app:backgroundTint="@color/button_color"
            app:icon="@drawable/ic_baseline_edit_24"
            app:iconPadding="0dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_search"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="270dp"
                android:layout_height="60dp"
                android:layout_marginStart="70dp"
                android:layout_marginLeft="70dp"
                android:fontFamily="serif-monospace"
                android:onClick="launchSearchActivity"
                android:text="@string/search_label"
                android:textSize="24sp"
                android:textStyle="bold"
                app:backgroundTint="@color/button_color"
                app:icon="@drawable/ic_baseline_search_24"
                app:iconPadding="0dp" />

            <Button
                android:id="@+id/button_ratings"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="270dp"
                android:layout_height="60dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:fontFamily="serif-monospace"
                android:onClick="launchRatingsActivity"
                android:text="@string/ratings_label"
                android:textSize="24sp"
                android:textStyle="bold"
                app:backgroundTint="@color/button_color"
                app:icon="@drawable/ic_white_star"
                app:iconPadding="0dp" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>